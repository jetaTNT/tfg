<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_preguntas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".ui.quiz.PreguntasActivity">

    <!-- Toolbar en la parte superior -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_preguntas"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        android:titleTextColor="@color/white"
        android:title="Preguntas" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Texto de la pregunta -->
        <TextView
            android:id="@+id/tvPregunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Texto de la pregunta"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/black"
            android:fontFamily="@font/baloo"
            android:layout_marginBottom="24dp"/>

        <!-- Grupo de RadioButtons para opciones -->
        <RadioGroup
            android:id="@+id/rgOpciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Aquí se añadirán dinámicamente los RadioButton -->
        </RadioGroup>

        <!-- Botón para “Enviar / Siguiente” -->
        <Button
            android:id="@+id/btnSiguientePregunta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="siguiente"
            android:textColor="@color/white"
            android:background="@drawable/drawable"
            android:layout_marginTop="24dp"/>

        <!-- (Opcional) Texto de puntos parciales; al inicio está oculto -->
        <TextView
            android:id="@+id/tvPuntosActuales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puntos actuales: 0"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:fontFamily="@font/baloo"/>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
