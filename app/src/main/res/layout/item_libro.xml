<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="6dp"
    card_view:cardBackgroundColor="#FFE0B2"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Icono del libro con emoticono -->
        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="📖"
            android:textSize="30sp"
            android:gravity="center"
            android:background="#FFFFFF"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- ID CORREGIDO: tvTitulo -> tvTituloLibro -->
            <TextView
                android:id="@+id/tvTituloLibro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Libro"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#5D4037"
                android:fontFamily="@font/baloo" />

            <TextView
                android:id="@+id/tvDescripcionLibro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripción corta del libro"
                android:textSize="16sp"
                android:textColor="#6D4C41"
                android:fontFamily="@font/baloo"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Flecha indicadora -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="▶️"
            android:textSize="20sp"
            android:layout_marginStart="8dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
